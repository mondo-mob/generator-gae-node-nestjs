type Avatar {
  url: String
}

type User {
  id: ID!
  name: String
  avatar: Avatar!
  email: String!
  roles: [String!]!
  profile: [Attachment!]
}

type Query {
  users: [User!]!
  userById(id: ID!): User
}

input AttachmentInput {
  id: ID!
  filename: String!
}

type Attachment {
  id: ID!
  filename: String!
}

type Mutation {
  updateUser(id: ID!, name: String, roles: [String!]!, profile: [AttachmentInput!]): User!
}
